{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/campaigns",
      "dest": "/api/campaigns.js"
    },
    {
      "src": "/api/influencers",
      "dest": "/api/influencers.js"
    },
    {
      "src": "/api/mentions",
      "dest": "/api/mentions.js"
    },
    {
      "src": "/api/dashboard",
      "dest": "/api/dashboard.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}
